<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/individualNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/dot"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:background="@drawable/red_dot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleNotes"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:padding="7dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Hello World notes"/>

            <TextView
                android:id="@+id/descriptionNotes"
                android:layout_width="wrap_content"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:padding="7dp"

                android:layout_height="wrap_content"
                android:text="orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"></TextView>

            <TextView
                android:id="@+id/dateNotes"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:padding="7dp"

                android:textSize="23sp"
                android:layout_height="wrap_content"
                android:text="9/28/2023"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>